@using tl2_tp10_2023_alvaroad29.ViewModels
@model ActualizarTareaViewModel

<div class="container">
    <form asp-controller="Tarea" asp-action="Update">
        @* <input hidden asp-for="@Model.Id" > 
        <input hidden asp-for ="@Model.Id_tablero" > 
        <input hidden asp-for ="@Model.IdUsuarioAsignado" >  ???*@
        <input hidden asp-for="@Model.TareaVM.Id" > 
        <input hidden asp-for="@Model.TareaVM.Id_tablero " > 
        <div class="form-group">
            <label asp-for="@Model.TareaVM.Nombre">Nombre</label>
            <input asp-for="@Model.TareaVM.Nombre" class="form-control" />
            <span asp-validation-for="@Model.TareaVM.Nombre" class="text-danger"></span>  
        </div>
        <div class="form-group">
            <label asp-for="@Model.TareaVM.Descripcion">Descripcion</label>
            <input asp-for="@Model.TareaVM.Descripcion" class="form-control" />
            <span asp-validation-for="@Model.TareaVM.Descripcion" class="text-danger"></span>  
        </div>
        <div class="form-group">
            <label asp-for="@Model.TareaVM.Color">Color</label>
            <input asp-for="@Model.TareaVM.Color" class="form-control" />
            <span asp-validation-for="@Model.TareaVM.Color" class="text-danger"></span> 
        </div>
        <div >
            <label asp-for="@Model.TareaVM.Estado">Estado</label>
            <select asp-for="@Model.TareaVM.Estado" class="form-control" asp-items="@Html.GetEnumSelectList<EstadoTarea>()">
            </select>
            <span asp-validation-for="@Model.TareaVM.Estado" class="text-danger"></span> 
        </div>
        <label asp-for="@Model.TareaVM.IdUsuarioAsignado">Usuario asignado</label>
        <select asp-for="@Model.TareaVM.IdUsuarioAsignado" class="form-control">
            @foreach (var usuario in Model.UsuariosVM.UsuariosVM)
            {
                <option value="@usuario.Id">@usuario.NombreDeUsuario</option>
            }
        </select>
        <span asp-validation-for="@Model.TareaVM.IdUsuarioAsignado" class="text-danger"></span>  
        <button type="submit"  class="btn btn-primary">Enviar</button>
    </form>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }