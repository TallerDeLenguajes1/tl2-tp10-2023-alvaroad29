@{
    ViewData["Title"] = "Tareas"; // titulo de la pestaña
}
@using tl2_tp10_2023_alvaroad29.ViewModels

@model ListarTareasViewModel

<div class="container">
    <h2>Lista Tareas - tablero : @Model.NombreTablero</h2>

    <table class="table">
        <thead>
            <tr>
                <th hidden>ID</th> <!-- oculto el id--->
                <th hidden>Id tablero</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Color</th>
                <th>Estado</th>
                <th>Id usuario asignado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.TareasVM)
            {
                <tr>
                    <td hidden>@t.Id</td>
                    <td hidden>@t.Id_tablero</td>
                    <td>@t.Nombre</td>
                    <td>@t.Descripcion</td>
                    <td>@t.Color</td>
                    <td>@t.Estado</td>
                    <td>@t.NombreUsuarioPropietario</td>
                    <td>
                        <a asp-controller="Tarea" asp-action="Update" asp-route-id="@t.Id" class="btn btn-primary">Modificar</a>
                        <a asp-controller="Tarea" asp-action="Delete" asp-route-id="@t.Id" onclick="return confirm('¿Estas seguro que quieres eliminar el elemento?')" class="btn btn-primary">Eliminar</a>  
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a type="button" class="btn btn-primary btn-lg" asp-controller="Tarea" asp-action="Create" asp-route-id="@Model.Id_tablero">Crear Tarea</a>
</div>