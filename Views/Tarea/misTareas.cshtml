@{
    ViewData["Title"] = "Mis tareas"; // titulo de la pestaña
}
@using tl2_tp10_2023_alvaroad29.ViewModels

@model ListarMisTareasViewModel

@* <div class = "text-center">
    <h1>Usuario Asignado : @Model.NombreUsuarioAsignado</h1>
</div> *@

<div class="card">
    <div class="card-header text-center">
        <h4>
             <i class="bi bi-clipboard-data-fill"></i>
             Mis tareas
        </h4>
    </div>
    <div class="card-body">
        <table class="display nowrap table-striped" style="width:100%" id="myTable">
            <thead>
                <tr>
                    <th></th>
                    <th>Tablero</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Color</th>
                    @* <th>Usuario asignado</th> *@
                    <th>Estado</th>
                    <th></th>
                    <th hidden>ID</th> <!-- oculto el id--->
                    <th hidden>Id tablero</th>
                    <th hidden></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.TareasVM)
                {
                    <tr>
                        <td></td>
                        <td>@t.NombreTablero</td>
                        <td>@t.Nombre</td>
                        <td>@t.Descripcion</td>
                        <td> <i class="bi bi-droplet-fill" style="color: @t.Color"></i></td>
                        @* <td>@t.NombreUsuarioAsignado</td> *@
                        <td>
                            <form id="cambiarEstadoForm_@t.Id" asp-controller="Tarea" asp-action="UpdateEstado">
                                <input type="hidden" name="idTablero" value="@t.Id_tablero">
                                <input type="hidden" name="id" value="@t.Id" />
                                <div class="input-group">
                                    <select asp-for="@t.Estado" class="form-select form-control" asp-items="@Html.GetEnumSelectList<EstadoTarea>()" name="estado" onchange="enviarFormulario('cambiarEstadoForm_@t.Id')">
                                    </select>
                                </div>
                            </form>
                        </td>
                        
                         @if(t.Modificable == true  || Context.Session.GetString("NivelDeAcceso") == enumRol.admin.ToString())
                        {
                            <td>
                                <div class="nav-item dropdown-center">
                                    <i class="bi bi-three-dots-vertical" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"></i>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a type="button" aasp-controller="Tarea" asp-action="Update" asp-route-id="@t.Id" class="dropdown-item d-flex align-items-center" aria-pressed="false">
                                                <i class="bi bi-pencil-fill me-2"></i>
                                                    Modificar
                                            </a>
                                        </li>
                                        <li>
                                            <a type="button" asp-controller="Tarea" asp-action="Delete" asp-route-id="@t.Id" onclick="return confirm('¿Estas seguro que quieres eliminar el elemento?')" class="dropdown-item d-flex align-items-center" aria-pressed="false">
                                                <i class="bi bi-trash-fill me-2"></i>
                                                Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            
                        }else{
                            <td></td>
                        }
                        <td hidden>@t.Id</td>
                        <td hidden>@t.Id_tablero</td>  
                        <td hidden>@t.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/js/site3.js"></script>