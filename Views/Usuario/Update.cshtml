
@model Usuario

<div class="container">
    <form asp-controller="Usuario" asp-action="Update">
        <input hidden asp-for="@Model.Id"> <!--envio el id -->
        <div class="mb-3">
            <label asp-for="@Model.NombreDeUsuario">Ingrese el nuevo nombre de usuario</label>
            <input asp-for="@Model.NombreDeUsuario" class="form-control"/>
        </div>

        <button type="submit"  class="btn btn-primary">Enviar</button>
    </form>
</div>