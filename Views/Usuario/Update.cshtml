@using tl2_tp10_2023_alvaroad29.ViewModels
@model ActualizarUsuarioViewModel

<div class="container">
    <form asp-controller="Usuario" asp-action="Update">
        <input hidden asp-for="@Model.Id"> <!--envio el id -->
    <div class="mb-3">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>   
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control"/>
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>    
    </div>
    <div>
        <label asp-for="@Model.Rol"></label>
        <select asp-for="@Model.Rol" class="form-control" asp-items="@Html.GetEnumSelectList<enumRol>()"></select>
        <span asp-validation-for="@Model.Rol" class="text-danger"></span> 
    </div>
        <button type="submit"  class="btn btn-primary">Enviar</button>
    </form>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }